{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strictNullChecks": true,
		"skipLibCheck": true,

		"outDir": "dist",
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
